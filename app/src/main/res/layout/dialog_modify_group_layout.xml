<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/dialog_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/channel_name"/>
    <EditText
        android:id="@+id/dialog_group_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/url"/>
    <EditText
        android:id="@+id/dialog_group_webport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/web_port"/>
    <EditText
        android:id="@+id/dialog_group_videoport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/video_port"/>
    <EditText
        android:id="@+id/dialog_group_id"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/id"/>
    <EditText
        android:id="@+id/dialog_group_pw"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="@string/password"/>

</LinearLayout>
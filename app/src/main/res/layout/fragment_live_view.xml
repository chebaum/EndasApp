<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tistory.chebaum.endasapp.LiveViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_margin="15dp">

        <ImageButton
            android:id="@+id/btn_convert_screen"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_screen_rotation_black_24dp"
            android:backgroundTint="?android:attr/windowBackground"/>

        <LinearLayout
            android:id="@+id/videoLayout_one_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_marginBottom="15dp"
            android:visibility="visible">
            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/videoLayout_four_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="horizontal">
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="horizontal">
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/videoLayout_nine_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33"
                android:orientation="horizontal">
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33"
                android:orientation="horizontal">
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33"
                android:orientation="horizontal">
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
                <VideoView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:text="화면구성"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="bottom"/>

        <LinearLayout
            android:id="@+id/layout_liveview_btns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one_screen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:layout_margin="15dp"
                android:background="@drawable/ic_one_screen"/>

            <Button
                android:id="@+id/btn_four_screens"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:layout_margin="15dp"
                android:background="@drawable/ic_four_screens"/>

            <Button
                android:id="@+id/btn_nine_screens"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:layout_margin="15dp"
                android:background="@drawable/ic_nine_screens"/>


        </LinearLayout>


    </LinearLayout>

</FrameLayout>
